{
  "name": "rocketgraph/php-sdk",
  "license": "MIT",
  "type": "project",
  "description": "Rocketgraph PHP SDK for report development",
  "autoload": {
    "psr-4": {
      "": "src/",
      "RG\\": "core/",
      "RAM\\": "reports-lib/",
      "Tests\\": "tests"
    }
  },
  "require": {
    "php": ">=5.5.0",
    "symfony/symfony": "2.7.*",
    "league/oauth2-client": "0.10.*",
    "league/oauth1-client": "~1.0",
    "sensio/buzz-bundle": "dev-master"
  },
  "scripts": {
    "post-install-cmd": [
      "php -r \"if(!is_dir('src')){mkdir('src');}\"",
      "php -r \"if(!is_dir('web/assets')) {umask(0);mkdir('web/assets', 0777);}\""
      "php -r \"if(!is_dir('storage')) {umask(0);mkdir('storage', 0777);}\""
    ],
    "post-update-cmd": [
      "php -r \"if(!is_dir('src')){mkdir('src');}\"",
      "php -r \"if(!is_dir('web/assets')) {umask(0);mkdir('web/assets', 0777);}\""
      "php -r \"if(!is_dir('storage')) {umask(0);mkdir('storage', 0777);}\""
    ]
  }
}
